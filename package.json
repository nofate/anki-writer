{
  "name": "anki-apkg-writer",
  "version": "1.0.0",
  "description": "Streaming TypeScript implementation for Anki .apkg file generation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "example": "tsx example.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.ts\""
  },
  "keywords": [
    "anki",
    "apkg",
    "flashcards",
    "spaced-repetition",
    "streaming",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "archiver": "^7.0.1",
    "sql.js": "^1.11.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/node": "^22.0.0",
    "@types/sql.js": "^1.4.9",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.9.3"
  }
}
